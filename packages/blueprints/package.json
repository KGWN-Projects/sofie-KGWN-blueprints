{
	"name": "blueprints",
	"version": "0.4.0",
	"repository": "https://github.com/superflytv/sofie-demo-blueprints/",
	"license": "MIT",
	"files": [],
	"scripts": {
		"build": "yarn test && yarn build-now",
		"dist": "yarn build && yarn bundle",
		"bundle": "blueprint-bundle ./blueprint-map.mjs ./dist",
		"build-now": "blueprint-build ./blueprint-map.mjs ./dist",
		"build-inner": "blueprint-build ./blueprint-map.mjs ./dist",
		"build-sync-local": "blueprint-build ./blueprint-map.mjs ./dist --server=\"http://127.0.0.1:3000\"",
		"build:upload": "blueprint-build ./blueprint-map.mjs ./dist --server=\"http://127.0.0.1:3000\" --development",
		"watch": "blueprint-build ./blueprint-map.mjs ./dist --watch --development",
		"watch-sync-local": "blueprint-build ./blueprint-map.mjs ./dist --watch --development --server=\"http://127.0.0.1:3000\"",
		"lint:raw": "eslint",
		"lint": "tsc --noEmit && eslint .",
		"check-types": "tsc --noEmit",
		"watch-types": "yarn check-types --watch",
		"unit": "vitest",
		"test": "vitest --run",
		"link-integration": "yarn link @sofie-automation/blueprints-integration",
		"translation:extract": "blueprint-extract-translations ./blueprint-map.mjs",
		"generate-schema-types": "blueprint-schema-types ./src/\\$schemas/ ./src/\\$schemas/generated/"
	},
	"devDependencies": {
		"@types/node": "^22.19.3",
		"sofie-blueprint-tools": "^1.3.0",
		"typescript": "~5.8.3",
		"vitest": "^4.0.16"
	},
	"dependencies": {
		"@sofie-automation/blueprints-integration": "^26.3.0-nightly-ci-fix-publish-20260204-141836-4220a1a.0",
		"dereference-json-schema": "^0.2.1",
		"type-fest": "^4.33.0"
	},
	"private": true,
	"engines": {
		"node": ">=22.0.0"
	},
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"eslint --fix"
		]
	}
}
